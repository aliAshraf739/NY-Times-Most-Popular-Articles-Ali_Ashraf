<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    app:cardBackgroundColor="@color/colorLightBlack"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_8sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvSource"
            android:gravity="start"
            android:text="Unknown"
            android:textSize="@dimen/_14ssp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:id="@+id/tvTypeHeading"
            android:gravity="start"
            android:text="Type:  "
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tvSource"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="@dimen/_8sdp" />
        <TextView
            android:id="@+id/tvType"
            android:gravity="start|center_vertical"
            android:text="Unknown"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/white"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@+id/tvTypeHeading"
            app:layout_constraintStart_toEndOf="@+id/tvTypeHeading"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/tvTypeHeading"
            android:layout_marginRight="@dimen/_8sdp" />
        <TextView
            android:id="@+id/tvSectionHeading"
            android:gravity="start"
            android:text="Section:  "
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tvTypeHeading"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="@dimen/_8sdp" />
        <TextView
            android:id="@+id/tvSection"
            android:gravity="start|center_vertical"
            android:text="Unknown"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/white"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@+id/tvSectionHeading"
            app:layout_constraintStart_toEndOf="@+id/tvSectionHeading"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/tvSectionHeading"
            android:layout_marginRight="@dimen/_8sdp" />
        <RelativeLayout
            android:id="@+id/rlArticleImage"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tvSection"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <ImageView
                android:id="@+id/ivArticle"
                android:src="@drawable/img_placeholder"
                android:scaleType="centerCrop"
                android:background="@color/colorBlack"
                android:transitionName="viewDetail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"/>
            <TextView
                android:id="@+id/tvTitle"
                android:background="@drawable/bg_gradient_transparent_black"
                android:gravity="start|center_vertical"
                android:text="Unknown"
                android:textSize="@dimen/_10ssp"
                android:textColor="@color/white"
                android:maxLines="2"
                android:ellipsize="end"
                android:paddingStart="@dimen/_8sdp"
                android:paddingEnd="@dimen/_8sdp"
                android:layout_alignBottom="@+id/ivArticle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"/>
        </RelativeLayout>
        <TextView
            android:gravity="start"
            android:text="Tap to view details."
            android:textSize="@dimen/_12ssp"
            android:textColor="@android:color/darker_gray"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            app:layout_constraintTop_toBottomOf="@+id/rlArticleImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>