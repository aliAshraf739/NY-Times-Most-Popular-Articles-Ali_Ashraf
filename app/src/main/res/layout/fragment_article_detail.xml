<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorBlack"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.articleDetail.ArticleDetailFragment">
    <include
        android:id="@+id/toolBarLayout"
        layout="@layout/layout_toolbar"/>
    <ImageView
        android:id="@+id/ivArticle"
        android:scaleType="centerCrop"
        android:src="@drawable/img_placeholder"
        android:background="@color/colorLightBlack"
        android:transitionName="viewDetail"
        android:layout_width="0dp"
        android:layout_height="@dimen/_200sdp"
        app:layout_constraintTop_toBottomOf="@+id/toolBarLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <ScrollView
        android:scrollbars="none"
        android:fillViewport="true"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/ivArticle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
            android:padding="@dimen/_12sdp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvTitle"
                android:gravity="start"
                android:text="Unknown"
                android:textSize="@dimen/_14ssp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@android:color/darker_gray"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <TextView
                android:gravity="start"
                android:text="Abstract"
                android:textSize="@dimen/_10ssp"
                android:textColor="@android:color/darker_gray"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvAbstract"
                android:gravity="start"
                android:text="Unknown"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:maxLines="6"
                android:ellipsize="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@android:color/darker_gray"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>

            <TextView
                android:gravity="start"
                android:text="Source"
                android:textSize="@dimen/_10ssp"
                android:textColor="@android:color/darker_gray"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvSource"
                android:gravity="start"
                android:text="Unknown"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@android:color/darker_gray"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>

            <TextView
                android:gravity="start"
                android:text="Type"
                android:textSize="@dimen/_10ssp"
                android:textColor="@android:color/darker_gray"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvType"
                android:gravity="start"
                android:text="Unknown"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@android:color/darker_gray"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>

            <TextView
                android:gravity="start"
                android:text="Section"
                android:textSize="@dimen/_10ssp"
                android:textColor="@android:color/darker_gray"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvSection"
                android:gravity="start"
                android:text="Unknown"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@android:color/darker_gray"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>

            <TextView
                android:gravity="start"
                android:text="Subsecton"
                android:textSize="@dimen/_10ssp"
                android:textColor="@android:color/darker_gray"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvSubSection"
                android:gravity="start"
                android:text="Unknown"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@android:color/darker_gray"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>

            <TextView
                android:gravity="start"
                android:text="Publish Date"
                android:textSize="@dimen/_10ssp"
                android:textColor="@android:color/darker_gray"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvPublishDate"
                android:gravity="start"
                android:text="Unknown"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@android:color/darker_gray"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>